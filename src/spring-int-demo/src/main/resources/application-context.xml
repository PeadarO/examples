<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="account" class="com.truward.springintdemo.GoogleAccount">
        <property name="profile" ref="profile" />
    </bean>
    <bean id="profile" class="com.truward.springintdemo.TwitterProfile">
        <property name="name" value="TwitterName" />
    </bean>
</beans>