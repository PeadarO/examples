<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .panel {
            overflow: hidden;
            height: 46px;
            background-color: #eeeeec;
            padding: 12px;
            border-bottom: 1px solid #babdb6;
        }

        .user-info-box {
            float: right;
            padding-right: 10px;
        }

        .logo {
            font-size: 24px;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.panel}">
        <p class="{style.user-info-box}">Logged in as <a href="#">Username</a>. <a href="#">Logout</a></p>
        <h1 class="{style.logo}">Blog Logo</h1>
    </g:HTMLPanel>
</ui:UiBinder>
