<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .panel {
            overflow: hidden;
            background-color: #eeeeec;
            padding: 12px;
            border-top: 1px solid #babdb6;
        }

        /* TODO: move horizontal list style to the CSS */
        .hor-list {
            list-style: none outside none;
            clear: both;
            overflow: hidden;
            cursor: pointer;
        }

        .hor-list > li {
            display: inline;
            float: left;
            overflow: hidden;
        }


        .footer-list {

        }

        .footer-list > li {
            border-right: 1px solid #babdb6;
            margin-right: 6px;
            padding-right: 6px;
        }

        .footer-list > li:last-child {
            border-right: none;
            margin-right: 0;
            padding-right: 0;
        }
    </ui:style>


    <g:HTMLPanel styleName="{style.panel}">
        <ul class="{style.hor-list} {style.footer-list}">
            <li>Content &copy; <a href="#">My Blog</a></li>
            <li>Powered by <a href="#">MyBlog</a></li>
        </ul>
    </g:HTMLPanel>
</ui:UiBinder>
